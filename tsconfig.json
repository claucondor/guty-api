{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es6"],
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "sandbox.ts"]
}
